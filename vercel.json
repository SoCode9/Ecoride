{
    "version": 2,
    "builds": [
        {
            "src": "public/**/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "controllers/**/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "class/**/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "script/**/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "templates/**/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "database/**/*.php",
            "use": "@vercel/php"
        }
    ],
    "routes": [
        {
            "src": "/login",
            "dest": "controllers/login.php"
        },
        {
            "src": "/user",
            "dest": "controllers/user_space.php"
        },
        {
            "src": "/admin",
            "dest": "controllers/admin_space.php"
        },
        {
            "src": "/search",
            "dest": "controllers/carpool_search.php"
        },
        {
            "src": "/create",
            "dest": "controllers/create_carpool.php"
        },
        {
            "src": "/employee",
            "dest": "controllers/employee_space.php"
        },
        {
            "src": "/details",
            "dest": "controllers/carpool_details.php"
        },
        {
            "src": "/(.*)",
            "dest": "public/index.php"
        }
    ]
}